# Production Environment
ENV=prod

# Database
DATABASE_URL=postgresql://user:pass@prod-db-host:5432/consigliere_prod

# Security - Use a proper secret
SECRET_KEY=dummy-secret-key-at-least-32-chars-long

# JWT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Application
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=5242880

# CORS
CORS_ORIGINS=https://prod-frontend.com

# External APIs
QUOTE_API_URL=https://api.quotable.io/quotes/random?tags=wisdom

# Logging - set by ENV
# LOG_LEVEL=WARNING

# Frontend API Base URL (for build)
API_BASE_URL=http://prod-backend:8000